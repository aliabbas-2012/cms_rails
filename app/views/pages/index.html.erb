<h1>Listing pages</h1>

<table cellpadding="0" cellspacing="0" style="width:700px">
  <thead>
    <tr>
      <th style="width:30%;text-align:left">name</th>
      <th style="width:30%;text-align:left">subject</th>
      <th style="width:20%;text-align:left">Position</th>
      <th colspan="3" style="width:20%;text-align:left"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%=  page.name %></td>
        <td><%=  page.subject.nil?? '': page.subject.name  %></td>
        <td><%=  page.position  %></td>
        <td><%= link_to 'Show', page %> </td>
        <td><%= link_to 'Edit', edit_page_path(page) %> </td>
        <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

