<%= simple_form_for(@page) do |f| %>
    <% if @page.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@page.errors.count, 'error') %> prohibited this page from being saved:</h2>

          <ul>
            <% @page.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %>
      <br/>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.input( :subject_id,collection:Subject.all.collect {|a| [a.name, a.id]}) -%>
    </div>
    <div class="field">
      <%= f.label :permalink %>
      <br/>
      <%= f.text_field :permalink %>
    </div>
    <div class="field">
      <%= f.label :body %>
      <br/>
      <%= f.text_area :body %>
    </div>

    <div class="field">
      <%= f.label :is_visible %>
      <br/>
      <%= f.check_box :is_visible %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
