<h1>Listing subjects</h1>
<div class="subjects index">
  <%= link_to 'New Subject', new_subject_path, :class => 'action new' %>
  <table class="table">
    <thead>
    <tr>
      <th <%= sort_td_class_helper "id" %> style="width: 5%">
        <%= sort_link_helper "ID", "id" %>
      </th>
      <th <%= sort_td_class_helper "name" %> style="width: 25%">
        <%= sort_link_helper "Name", "name" %>
      </th>

      <th style="width:40%">description</th>

      <th <%= sort_td_class_helper "is_visible" %> style="width:10%">
        <%= sort_link_helper "Visible", "is_visible" %>
      </th>
      <th style="width:40%">Image</th>
      <th colspan="3" style="width:20%"></th>
    </tr>
    </thead>

    <tbody>
    <% @subjects.each do |subject| %>
        <tr>
          <td><%= subject.id %></td>
          <td><%= subject.name %></td>
          <td><%= subject.description %></td>
          <td><%= status_tag(subject.is_visible, subject.visibility) %></td>
          <td><%=  !subject.image.blank?? (link_to "Download", subject.image_url):'' %></td>
          <td><%= link_to 'Show', subject, :class => 'action show' %></td>
          <td><%= link_to 'Edit', edit_subject_path(subject), :class => 'action edit' %></td>
          <td><%= link_to 'Destroy', subject, method: :delete, data: {confirm: 'Are you sure?'}, :class => 'action delete' %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
<br>
<%= will_paginate @subjects,renderer: BootstrapPagination::Rails %>
<br>

<br/><br/><br/><br/>

<%= print_my_name @subject do |block_param, second| %>
    <h2><%= block_param.inspect %></h2>
    <h2><%= second.inspect %></h2>
    <h3>My Name is</h3>
<% end %>

<br/><br/><br/><br/>
<br/><br/><br/><br/>

<% #data_listing_for @subjects do |list| %>
    <% #list.heading proc { |product| product.name.upcase.to_s }, class: 'product-heading' %>
    <% #list.heading :name %>
    <% #list.text :name %>
<% #end %>

