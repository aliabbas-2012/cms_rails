<h1>Listing products</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Categories</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.categories %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<h1>Table Pluggin practice</h1>
<br>
<br>
<%= table_for(@products,params,controller,{:class=>'table table-striped'}) do |t| %>
    <% t.col :title ,:link=>true,:column=>'title' %>
    <% t.col :description %>
    <% t.col :categories, :td=>lambda { |u| u.categories.split(",").join(" ") } %>
    <% t.col :description, :value => 'static value',:td=>'yes' %>
<% end %>

