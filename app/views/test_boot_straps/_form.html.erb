<%= simple_form_for @test_boot_strap, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>

  <%= f.input :description %>

  <div class="control-group col-lg-6" style="margin-top: 10px">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                test_boot_straps_path, :class => 'btn btn-default' %>
  </div>

<% end %>
