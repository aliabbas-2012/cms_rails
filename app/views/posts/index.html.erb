<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th >name</th>
      <th >peramlink</th>
      <th >Position</th>
      <th colspan="2">actions</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.name, post %></td>
        <td><%=  post.permalink  %></td>
        <td><%=  post.position  %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

